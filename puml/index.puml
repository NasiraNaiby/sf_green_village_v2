@startuml
class User {
	**id : int**
	email : string
	roles : array
	password : string
	<color:#0000dd>client : Clients</color>
	user_name : string
	<color:#0000dd>wishlist : Produits[]</color>
}

class Vendeurs {
	**id : int**
	id_vendeur : int
	nom_vend : string
	email_vend : string
	phone_vend : int
	<color:#0000dd>client : Clients</color>
}

class Produits {
	**id : int**
	nom_produit : string
	desc_produit : string
	vent_prix : string
	photo : string
	<color:#0000dd>categorie : Categories</color>
	<color:#0000dd>fournisseur : Fournisseurs</color>
	<color:#0000dd>users : User[]</color>
	<color:#0000dd>produitImages : ProduitImage[]</color>
}

class LivraisonNote {
	**id : int**
	<color:#0000dd>commande : Commandes</color>
	statutLivraison : string
	dateLivraison : DateTime
	noteLivraison : string
}

class ProduitImage {
	**id : int**
	filename : string
	<color:#0000dd>produit : Produits</color>
}

class Clients {
	**id : int**
	typeClient : string
	conditionPaiement : string
	adresseFacturation : string
	adresseLivraison : string
	codePostalFacturation : string
	codePostalLivraison : string
	<color:#0000dd>user : User</color>
	<color:#0000dd>vendeurs : Vendeurs[]</color>
	<color:#0000dd>commandes : Commandes[]</color>
	client_email : string
	client_phone : string
	<color:#0000dd>favoris : Produits[]</color>
}

class Factures {
	**id : int**
	<color:#0000dd>commande : Commandes</color>
	dateFacture : DateTime
	montantTotal : string
	statutPaiement : string
}

class Fournisseurs {
	**id : int**
	fouDescription : string
	nom_fournisseur : string
	email_fou : string
	phone_fou : int
	produit_exclusif : string
}

class Categories {
	**id : int**
	nom_cat : string
	desc_cat : string
	<color:#0000dd>produits : Produits[]</color>
}

class Commandes {
	**id : int**
	<color:#0000dd>client : Clients</color>
	<color:#0000dd>produits : Produits[]</color>
	quantite : int
	prixUnitaire : string
	prixTotal : string
	<color:#0000dd>livraisonNote : LivraisonNote</color>
	<color:#0000dd>facture : Factures</color>
}

