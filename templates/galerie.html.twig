{% extends 'main.html.twig' %}

{% block title %}Hello Clients!{% endblock %}
{% block body %}

<div class="container">
  <div class="row">
    {% for produit in produits %}
      <div class="col-lg-4 col-md-6 mb-4">
        <a href="{{ produit.photo }}" data-lightbox="gallery" data-title="{{ produit.nomProduit }}">
          <img
            src="{{ produit.photo }}"
            class="w-100 shadow-1-strong rounded mb-4 zoomable"
            alt="{{ produit.nomProduit }}"
          />
        </a>
      </div>
    {% endfor %}
  </div>
</div>




{% endblock %}
