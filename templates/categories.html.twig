{% extends 'main.html.twig' %}

{% block body %}

<section class="cat_section mt-5">
  <div class="container">
     <h2 class="text-center mb-4">Toutes les cat√©gories</h2>
    <div class="row">
      {% for cat in categories %}
        <div class="col-md-3 col-sm-6 mb-4">
          <div class="card h-100 shadow-sm hover-scale">
            <img src="/images/ins.jpg" class="card-img-top" alt="{{ cat.nomCat }}">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{ cat.nomCat }}</h5>
              <p class="card-text">{{ cat.descCat|u.truncate(80, '...') }}</p>
              <a href="{{ path('produit_par_categories', {'id': cat.id}) }}" class="btn btn-success mt-auto">Voir produits</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}

