{% extends 'main.html.twig' %}

{% block body %}

<section class="produit_section mt-5">
  <div class="container">
    <h2 class="text-center mb-5 fw-bold">Tous les Produits</h2>
    <div class="row g-4">
      {% for produit in produits %}
        <div class="col-lg-3 col-md-4 col-sm-6 d-flex">
          <div class="card shadow-sm border-0 w-100 hover-scale position-relative">
            
            <!-- Product Image with Heart -->
            <div class="card-img-container overflow-hidden" style="height: 200px;">
              <img src="{{ produit.photo }}" class="card-img-top img-fluid w-100 h-100" alt="{{ produit.nomProduit }}">
              <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-2 heart-btn" 
                      data-produit-id="{{ produit.id }}">
                <i class="bi bi-heart"></i>
              </button>
            </div>

            <!-- Card Body -->
            <div class="card-body d-flex flex-column p-3">
              <h5 class="card-title fw-bold mb-1">{{ produit.nomProduit }}</h5>
              <p class="card-text text-muted small mb-1">{{ produit.descProduit|length > 60 ? produit.descProduit[:60] ~ '...' : produit.descProduit }}</p>
              <p class="card-text fw-bold h6 mb-2">{{ produit.ventPrix }} â‚¬</p>
              <a href="/panier/add/{{ produit.id }}" class="btn btn-primary mt-auto btn-sm">Ajouter</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}

{% block javascripts %}
<style>
/* Card hover effect */
.hover-scale {
    transition: transform 0.3s, box-shadow 0.3s;
}
.hover-scale:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

/* Image zoom on hover and crop */
.card-img-container img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    transition: transform 0.3s;
}
.card-img-container:hover img {
    transform: scale(1.05);
}

/* Heart button */
.heart-btn {
    border-radius: 50%;
    transition: transform 0.2s;
}
.heart-btn:hover {
    transform: scale(1.2);
    color: red;
    background-color: white;
}

/* Reduce spacing */
.card-title {
    font-size: 1rem;
}
.card-text {
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const heartButtons = document.querySelectorAll('.heart-btn');
    heartButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const produitId = this.dataset.produitId;

            // Toggle heart icon fill
            const icon = this.querySelector('i');
            icon.classList.toggle('bi-heart-fill');
            icon.classList.toggle('bi-heart');

            // Optionally: send fetch request to add/remove from wishlist
            fetch(`/wishlist/toggle/${produitId}`, {
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            }).then(res => res.json())
              .then(data => console.log(data));
        });
    });
});
</script>
{% endblock %}
