{% extends 'main.html.twig' %}

{% block body %}
<div class="container my-5">
  <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

    <!-- Header -->
    <div class="bg-success text-white text-center py-5">
      <h1 class="fw-bold mb-0">{{ fournisseur.nomFournisseur }}</h1>
    </div>

    <!-- Body -->
    <div class="card-body  p-5">

      {# Description #}
      {% if fournisseur.fouDescription %}
        <p class="fs-5 text-secondary mb-4">{{ fournisseur.fouDescription }}</p>
      {% else %}
        <p class="text-muted fst-italic mb-4">Aucune description disponible.</p>
      {% endif %}

      <div class="row gy-4">
        <!-- Email -->
        <div class="col-md-6 d-flex align-items-center">
          <div class="icon bg-light text-primary rounded-circle me-3 p-3">
            <i class="bi bi-envelope fs-3"></i>
          </div>
          <div>
            <h6 class="mb-1 text-muted">Email</h6>
            <p class="mb-0 fw-semibold">{{ fournisseur.emailFou }}</p>
          </div>
        </div>

        <!-- Téléphone -->
        <div class="col-md-6 d-flex align-items-center">
          <div class="icon bg-light text-success rounded-circle me-3 p-3">
            <i class="bi bi-telephone fs-3"></i>
          </div>
          <div>
            <h6 class="mb-1 text-muted">Téléphone</h6>
            <p class="mb-0 fw-semibold">{{ fournisseur.phoneFou }}</p>
          </div>
        </div>

        <!-- Produit exclusif -->
        <!-- <div class="col-md-4 d-flex align-items-center">
          <div class="icon bg-light text-warning rounded-circle me-3 p-3">
            <i class="bi bi-star fs-3"></i>
          </div>
          <div>
            <h6 class="mb-1 text-muted">Produit exclusif</h6>
            <p class="mb-0 fw-semibold">
              {{ fournisseur.produitExclusif ?? 'Non spécifié' }}
            </p>
          </div>
        </div> -->
      </div>
    </div>
  </div>

  <!-- Produits Section -->
<div class="mt-5">
  <h2 class="fw-bold text-center mb-4">Produits de {{ fournisseur.nomFournisseur }}</h2>

 <div class="row g-3">
  {% if produits|length > 0 %}
    {% for produit in produits %}
      <div class="col-6 col-sm-4 col-md-3">
        <div class="produit-tile position-relative text-center overflow-hidden">
          <img src="{{ produit.photo }}" 
               alt="{{ produit.nomProduit }}" 
               class="img-fluid w-100" 
               style="height:200px; object-fit:cover; border-radius:12px;">
          <div class="produit-name mt-2 fw-bold text-truncate">{{ produit.nomProduit }}</div>
        </div>
      </div>
    {% endfor %}
  {% else %}
    <div class="alert alert-warning text-center">
      Ce fournisseur n’a pas encore de produits associés.
    </div>
  {% endif %}
</div>



</div>

{% endblock %}
