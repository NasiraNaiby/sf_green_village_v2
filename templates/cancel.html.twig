{% extends 'main.html.twig' %}

{% block title %}Paiement Annulé {% endblock %}

{% block body %}
<div class="d-flex flex-column justify-content-center align-items-center p-5  text-center bg-white">
    <div class="mb-3">
        <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
    </div>
    <h2 class="fw-bold text-danger mb-2">Paiement annulé </h2>
