<h1>Facture #{{ facture.id }}</h1>
<p>Date: {{ facture.dateFacture|date('d/m/Y') }}</p>
<p>Client: {{ client.clientEmail }}</p>
<p>Adresse: {{ client.adresseLivraison }}</p>

<table border="1" cellspacing="0" cellpadding="5">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {% for item in commande.getProduits() %}
        <tr>
            <td>{{ item.nomProduit }}</td>
            <td>{{ item.quantite }}</td>
            <td>{{ item.ventPrix|number_format(2, '.', ',') }} €</td>
            <td>{{ (item.ventPrix * item.quantite)|number_format(2, '.', ',') }} €</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<h3>Total: {{ commande.prixTotal|number_format(2, '.', ',') }} €</h3>
<p>Statut paiement: {{ facture.statutPaiement }}</p>
